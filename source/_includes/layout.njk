    <!-- Use title if it's in the page YAML frontmatter -->

    {# TODO: can we combine these branches with an inline if statement somehow? #}
    {% if title %}
      <title>{{title}}</title>
      <meta name="description" content="Blog Post: {{title}}">
      <meta name="twitter:title" content="{{title}} | Mehul Kar">
      <meta name="twitter:description" content="{{title}} : Mehul Kar">
      <meta property="og:title" content="{{title}} | Mehul Kar">
      <meta property="og:description" content="{{title}} : Mehul Kar">
    {% else %}
      <title>Mehul Kar</title>
      <meta name="description" content="Mehul Kar's website">
      <meta name="twitter:title" content="Mehul Kar">
      <meta name="twitter:description" content="Mehul Kar's website">
      <meta property="og:title" content="Mehul Kar">
      <meta property="og:description" content="Mehul Kar's website">
    {% endif %}

    {% if tags %}
      <meta name="keywords" content="{{tags}}">
    {% endif %}

    <link rel="stylesheet" href="/stylesheets/vendor/tachyons.css">
    <link rel="stylesheet" href="/stylesheets/post.css">
    <link rel="stylesheet" href="/stylesheets/app.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Work+Sans|Lato&display=swap"></link>
    <link href="https://unpkg.com/prismjs@1.20.0/themes/prism-okaidia.css" rel="stylesheet">

    <link rel="feed alternate" type="application/atom+xml" href="/feed.xml" title="RSS feed for mehulkar.com">

    <script>
      document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('year').innerHTML = (new Date).getFullYear();
      });
    </script>

    <link rel="apple-touch-icon" sizes="152x152" href="/images/icon-152.png"> <!-- touch-icon-ipad -->
    <link rel="apple-touch-icon" sizes="167x167" href="/images/icon-167.png"> <!-- touch-icon-ipad-retina -->
    <link rel="apple-touch-icon" sizes="180x180" href="/images/icon-180.png"> <!-- touch-icon-iphone-retina -->
    <link rel="apple-touch-icon" href="/image/icon-192.png"> <!-- touch-icon-iphone.png -->

    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#3399ff"/>
  </head>

  <body>
    <header class="site-header">
      <div class='header-content flex items-center justify-center mb3'>
        <a class='header-content--link' href='/'>
          <picture>
            <source srcset="/images/avatar.webp" type="image/webp">
            <source srcset="/images/avatar.jpeg" type="image/jpeg">
            <img
              alt="Picture of Mehul Kar"
              class='header-content--avatar'
              width='100'
              height='100'
              src="/images/avatar.jpeg">
          </picture>

          <h1 class="ma0 f2 fw3 white">Mehul Kar</h1>
        </a>
      </div>

      <section class='mb3 header__icons'>
        <a class='white f7' href="https://twitter.com/mehulkar" title="twitter">
          {# https://feathericons.com/?query=twitter #}
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="26"
            height="26"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round">
            <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1
            3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path>
          </svg>
        </a>

        <a class='white f7' href="mailto:mehul.kar@gmail.com" title="email">
          {# https://feathericons.com/?query=mail #}
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="26"
            height="26"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round">
            <title>Link to email</title>
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
            <polyline points="22,6 12,13 2,6"></polyline>
          </svg>
        </a>

        <a title="linkedin.com" class="white f7" href="https://linkedin.com/in/mehulkar">
          {# https://feathericons.com/?query=linkedin #}
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="26"
            height="26"
            viewBox="0 0 26 26"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="feather feather-linkedin">
            <title>LinkedIn</title>
            <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
            <rect x="2" y="9" width="4" height="12"></rect>
            <circle cx="4" cy="4" r="2"></circle>
          </svg>
        </a>

        <a type="application/atom+xml" title="RSS feed for mehulkar.com" class="feedbutton white f7" href="/feed.xml">
          {# https://feathericons.com/?query=rss #}
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="26"
            height="26"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round">
            <title>Link to RSS feed</title>
            <path d="M4 11a9 9 0 0 1 9 9"></path>
            <path d="M4 4a16 16 0 0 1 16 16"></path>
            <circle cx="5" cy="19" r="1"></circle>
          </svg>
        </a>
      </section>

      <div class='wave-container flex justify-center'>
        <div class="wave">
          <div class='bar bar1'></div>
          <div class='bar bar2'></div>
          <div class='bar bar3'></div>
          <div class='bar bar4'></div>
        </div>
      </div>
    </header>

    <main class='flex flex-column mw7'>
      <div id="content" class='pa3'>
        {{content | safe }}
      </div>

      <footer class='silver f6 tc pa2 mb2'>
        <div>&copy; <span id='year'></span></div>
      </footer>
    </main>
  </body>

  {% if "{{env.VERCEL_ANALYTICS_ID}}" %}
    <script src={{"/javascript/analytics.js" | url }}></script>
    <script>
      window.webVitals("{{env.VERCEL_ANALYTICS_ID}}");
    </script>
  {% endif %}
</html>
