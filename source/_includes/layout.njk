<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <!-- TODO: fix this
    <% if config[:analytics] %>
      <link rel="preconnect" href="https://plausible.io" crossorigin>
      <script async defer data-domain="mehulkar.com" src="https://plausible.io/js/plausible.js"></script>
    <% end %>
    -->

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta content="width=device-width, initial-scale=1" name=viewport>

    <!-- Use title if it's in the page YAML frontmatter -->

    <!-- TODO: can we combine these branches with an inline if statement somehow? -->
    {% if title %}
      <title>{{title}}</title>
      <meta name="description" content="Blog Post: {{title}}">
      <meta name="twitter:title" content="{{title}} | Mehul Kar">
      <meta name="twitter:description" content="{{title}} : Mehul Kar">
      <meta property="og:title" content="{{title}} | Mehul Kar">
      <meta property="og:description" content="{{title}} : Mehul Kar">
    {% else %}
      <title>Mehul Kar</title>
      <meta name="description" content="Mehul Kar's website">
      <meta name="twitter:title" content="Mehul Kar">
      <meta name="twitter:description" content="Mehul Kar's website">
      <meta property="og:title" content="Mehul Kar">
      <meta property="og:description" content="Mehul Kar's website">
    {% endif %}

    {% if categories %}
      <meta name="keywords" content="{{categories}}">
    {% endif %}

    <link rel="stylesheet" href="/stylesheets/vendor/tachyons.css">
    <link rel="stylesheet" href="/stylesheets/post.css">
    <link rel="stylesheet" href="/stylesheets/app.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Indie+Flower|Libre+Baskerville&display=swap"></link>
    <link href="https://unpkg.com/prismjs@1.20.0/themes/prism-okaidia.css" rel="stylesheet">

    <script>
      document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('year').innerHTML = (new Date).getFullYear();
      });
    </script>

    <link rel="apple-touch-icon" sizes="152x152" href="/images/icon-152.png"> <!-- touch-icon-ipad -->
    <link rel="apple-touch-icon" sizes="167x167" href="/images/icon-167.png"> <!-- touch-icon-ipad-retina -->
    <link rel="apple-touch-icon" sizes="180x180" href="/images/icon-180.png"> <!-- touch-icon-iphone-retina -->
    <link rel="apple-touch-icon" href="/image/icon-192.png"> <!-- touch-icon-iphone.png -->

    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#3399ff"/>
  </head>

  <body>
    <header>
      <div class='header-content flex items-center justify-center mb3'>
        <a class='header-content--link' href='/'>
          <img
            alt="Picture of Mehul Kar"
            class='header-content--avatar'
            width='40'
            height='40'
            src="/images/avatar.jpeg">
          <h1 class="ma0 f2 fw3 white">Mehul Kar</h1>
        </a>
      </div>

      <section class='mb3'>
        <a class='white f7 mr1' href="//twitter.com/mehulkar">
          <?xml version="1.0" encoding="utf-8"?>
          <svg version="1.1" width="24" height="24" x="0px" y="0px" viewBox="0 0 400 400">
          <title>Link to Twitter profile</title>
          <path fill="#fff" d="M153.6,301.6c94.3,0,145.9-78.2,145.9-145.9c0-2.2,0-4.4-0.1-6.6c10-7.2,18.7-16.3,25.6-26.6
              c-9.2,4.1-19.1,6.8-29.5,8.1c10.6-6.3,18.7-16.4,22.6-28.4c-9.9,5.9-20.9,10.1-32.6,12.4c-9.4-10-22.7-16.2-37.4-16.2
              c-28.3,0-51.3,23-51.3,51.3c0,4,0.5,7.9,1.3,11.7c-42.6-2.1-80.4-22.6-105.7-53.6c-4.4,7.6-6.9,16.4-6.9,25.8
              c0,17.8,9.1,33.5,22.8,42.7c-8.4-0.3-16.3-2.6-23.2-6.4c0,0.2,0,0.4,0,0.7c0,24.8,17.7,45.6,41.1,50.3c-4.3,1.2-8.8,1.8-13.5,1.8
              c-3.3,0-6.5-0.3-9.6-0.9c6.5,20.4,25.5,35.2,47.9,35.6c-17.6,13.8-39.7,22-63.7,22c-4.1,0-8.2-0.2-12.2-0.7
              C97.7,293.1,124.7,301.6,153.6,301.6"/>
          </svg>
        </a>
        <a class='white f7' href="mailto:mehul.kar@gmail.com">
          <?xml version="1.0" encoding="UTF-8"?>
          <svg width="27" height="22" viewBox="0 0 73 49" version="1.1">
            <title>Image of envelope to indicate email link</title>
            <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
              <rect stroke="#eee" stroke-width="2" fill="#FFFFFF" x="1" y="1" width="71" height="47" rx="3"></rect>
              <polyline stroke="#eee" stroke-width="2" points="1.59852417 0.735062101 36.5 24.5 71.5137355 0.735062101"></polyline>
            </g>
          </svg>
        </a>
      </section>

      <section class='wave-container flex justify-center'>
        <wave>
          <bar class='bar1'></bar>
          <bar class='bar2'></bar>
          <bar class='bar3'></bar>
          <bar class='bar4'></bar>
        </wave>
      </section>
    </header>

    <main class='flex flex-column mw7'>
      <div id="content" class='pa3'>
        {{content | safe }}
      </div>

      <footer class='silver f6 tc pa2 mb2'>
        <div>&copy; <span id='year'></span></div>
      </footer>
    </main>
  </body>
</html>
