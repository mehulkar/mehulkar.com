<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Mehul Kar" %></title>

    <%= stylesheet_link_tag "all" %>
    <%= javascript_include_tag  "all" %>
  </head>

  <body>
    <div id="header">
      <div class="header-content">
        <img src="https://gravatar.com/avatar/57c2dff3cf681f22f9519a18bafc7bce" width="40" height="40">
        <h1><a href='/'>Mehul Kar</a></h1>
        <nav>
          <li><a href="/">Home</a></li>
          <li><a href="/blog">Blog</a></li>
        </nav>
      </div>
    </div>
    <div class="sub-header">
      <div class="sub-header-content">
        <section>
          <h3>Reading</h3>
          <ul id='reading'></ul>
        </section>
        <section>
          <h3>Listening</h3>
          <a id='listening' target='_blank'></a>
        </section>
        <section>
          <h3>Favorites</h3>
          <li><a href="//twitter.com/mehulkar/favorites">See all</a></li>
        </section>
        <section>
          <h3>Contact</h3>
          <li><a href="//twitter.com/mehulkar">Twitter</a></li>
          <li><a href="mailto:mehul.kar@gmail.com">Email</a></li>
        </section>
      </div>
    </div>
    <div id="content">
      <%= yield %>
    </div>
    <div id="footer">
       &copy; <span id='year'></span>
    </div>
  </body>
</html>
