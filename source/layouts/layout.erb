<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Mehul Kar" %></title>

    <%= stylesheet_link_tag "all", "syntax" %>
    <%= javascript_include_tag  "all" %>
  </head>

  <body>
    <header>
      <div class="header-content">
        <img src="https://gravatar.com/avatar/57c2dff3cf681f22f9519a18bafc7bce" width="40" height="40">
        <h1><a href='/'>Mehul Kar</a></h1>
      </div>
      <nav>
        <li><a href="/">Home</a></li>
        <li><a href="/blog">Blog</a></li>
        <li><a href="//twitter.com/mehulkar/favorites">Favorites</a></li>
      </nav>

      <section class='notes'>
        <h3>Reading</h3>
        <ul id='reading'></ul>
      </section>

      <section class='notes'>
        <h3>Listening</h3>
        <a id='listening' target='_blank'></a>
      </section>

      <section class='notes'>
        <h3>Contact</h3>
        <li><a href="//twitter.com/mehulkar">Twitter</a></li>
        <li><a href="mailto:mehul.kar@gmail.com">Email</a></li>
      </section>
    </header>

    <div id="content">
      <div class='content-inside'>
        <%= yield %>
      </div>
      <spacer></spacer>
      <div id="footer">
         &copy; <span id='year'></span>
      </div>
    </div>
  </body>
</html>
