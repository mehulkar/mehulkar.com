<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "The Middleman" %></title>

    <%= stylesheet_link_tag "normalize", "main", "blog", "responsive", "left" %>
    <%= javascript_include_tag  "all" %>
  </head>

  <body class="<%= page_classes %>">
    <div id="page">
      <div id="header"><a href='/'>Mehul Kar</a></div>
      <div class="left">
        <img src="https://gravatar.com/avatar/57c2dff3cf681f22f9519a18bafc7bce" width="100" height="100">
        <section>
          <h3>Reading</h3>
          <ul id='reading'></ul>
        </section>
        <section>
          <h3>Listening</h3>
          <a id='listening' target='_blank'></a>
        </section>
        <section>
          <h3>Favorites</h3>
          <li><a href="//twitter.com/mehulkar/favorites">See all</a></li>
          <p>Will eventually pull recently Twitter favorites here</p>
        </section>
      </div>

      <div id="content">
        <%= yield %>
      </div>

      <div id="footer">
        <nav>
          <li><a href="/">Home</a></li>
          <li><a href="/blog">Blog</a></li>
        </nav>
         &copy; <span id='year'></span>
      </div>
    </div>
  </body>
</html>