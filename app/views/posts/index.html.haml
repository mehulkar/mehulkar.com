= render partial: 'archives', collection: @posts
%section.posts
  - @posts.each do |post|
    %article
      .post-title
        %h1
          = link_to post.title, post
      .post-date
        Last updated: 
        = post.updated_at.strftime(format='%B %e, %Y')
      .post-body
        = @markdown.render(post.body).html_safe