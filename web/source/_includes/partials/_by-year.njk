{% macro render(posts) %}
    {%- for year in posts -%}
        <div class='post-group mb4 mt0 ml0'>
            <div class='post-group--title'>
                <h2 class="mb3 fw2">
                    {{year.name}}
                </h2>
            </div>

            <ul class='post-list ml0 pl0'>
                {% for post in year.items %}
                    <li class='post-link'>
                        <a href="{{post.url}}">{{post.data.title}}</a>
                        <span class='date mr3'> - {{post.data.date | formatDate }}</span>
                    </li>
                {% endfor %}
            </ul>
        </div>
    {%- endfor -%}
{% endmacro %}
